<h1><%= @blog.new_record? ? '创建':'编辑'%>博客</h1>

<div class="row">
  <div class="col-sm-5">
    <%= form_for @blog ,url: (@blog.new_record? ? blogs_path : blog_path(@blog)) do |f|%>
        <div class="form-group">
          <ul class="list-unstyled">
            <% @blog.errors.messages.values.flatten.each do |error|%>
                <li><i class="fa fa-exclamation-circle"></i><%=error%></li>
            <%end%>
          </ul>
        </div>
        <div class="form-group">
          <%= f.text_field :title,class: "form-control", placeholder: "标题"%>
        </div>
        <div class="form-group">
          <%= f.text_area :content,class: "form-control", placeholder: "内容"%>
        </div>
        <div class="form-group">
          <%= text_field_tag 'blog[tags_string]',@blog.tags.map(&:title).join(','),class: "form-control"%><small>标签以逗号分隔</small>
        </div>

        <div class="form-group">
          <%= f.select :is_public,[['公开',true],['不公开',false]],{},class: "form-control"%>
        </div>

        <%= f.submit "保存", class: 'btn btn-primary'%>
    <%end%>
  </div>
</div>,